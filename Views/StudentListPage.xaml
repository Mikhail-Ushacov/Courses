<Page x:Class="Courses.StudentListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Список студентів">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
            <ui:SymbolIcon Symbol="People24" FontSize="32" Margin="0,0,16,0"/>
            <TextBlock Text="{Binding CourseName}"
                       FontSize="28"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Students}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Студент"
                                    Binding="{Binding Username}"
                                    Width="*"/>
                <DataGridTextColumn Header="Оцінка"
                                    Binding="{Binding Grade}"
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
