<Page x:Class="Courses.CourseRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Реєстрація на курси">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Доступні курси"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,24"/>

        <ui:ListView Grid.Row="1"
                     ItemsSource="{Binding AvailableCourses}">
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction Margin="0,4" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Book24" FontSize="24" Margin="0,0,16,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding CourseName}"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Instructor, StringFormat='Викладач: {0}'}"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               FontSize="13"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </ui:CardAction>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>

        <ui:Button Grid.Row="2"
                   Content="Зареєструватися"
                   Command="{Binding RegisterCommand}"
                   Appearance="Primary"
                   FontSize="16"
                   HorizontalAlignment="Right"
                   Margin="0,24,0,0"
                   Padding="24,12"/>
    </Grid>
</Page>
