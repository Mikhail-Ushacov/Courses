<Page x:Class="Courses.CoursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:Courses.Converters"
      Title="Сторінка курсу">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="24">
        <TabControl>
            <TabItem Header="Лекції">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
                    <ItemsControl ItemsSource="{Binding Lectures}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:CardAction Margin="0,4" Padding="16" Cursor="Hand"
                                               Click="LectureCard_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Document24" FontSize="24" Margin="0,0,16,0"/>
                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding AvailableFrom, StringFormat='З: {0}'}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,24,0"/>

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding AvailableUntil, StringFormat='До: {0}'}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </ui:CardAction>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Тести">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
                    <ItemsControl ItemsSource="{Binding Tests}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:CardAction Margin="0,4" Padding="16" Cursor="Hand"
                                               Click="TestCard_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="ClipboardTask24" FontSize="24" Margin="0,0,16,0"/>
                                            <TextBlock Text="{Binding TestName}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <Border Visibility="{Binding IsFinalTest, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,2"
                                                    Margin="12,0,0,0"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="Підсумковий" 
                                                           FontSize="12"
                                                           Foreground="White"
                                                           FontWeight="Medium"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding AvailableFrom, StringFormat='З: {0}'}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,24,0"/>

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding AvailableUntil, StringFormat='До: {0}'}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </ui:CardAction>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
