<Page x:Class="Courses.CoursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сторінка курсу">
    <Grid>
        <TabControl>
            <TabItem Header="Лекції">
                <ListView ItemsSource="{Binding Lectures}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Назва">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Title}"
                                                Click="LectureButton_Click"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="Blue"
                                                Cursor="Hand"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Доступна з" DisplayMemberBinding="{Binding AvailableFrom}" />
                            <GridViewColumn Header="Доступна до" DisplayMemberBinding="{Binding AvailableUntil}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

            <TabItem Header="Тести">
                <ListView ItemsSource="{Binding Tests}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Назва тесту">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding TestName}"
                                                Click="TestButton_Click"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="Blue"
                                                Cursor="Hand"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Доступний з" DisplayMemberBinding="{Binding AvailableFrom}" />
                            <GridViewColumn Header="Доступний до" DisplayMemberBinding="{Binding AvailableUntil}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
