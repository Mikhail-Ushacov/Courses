<Window x:Class="Courses.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Освітня Система" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D4E63"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="#2C3E50" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="189*"/>
                <RowDefinition Height="395*"/>
            </Grid.RowDefinitions>
            <Frame x:Name="MainFrame" 
                   Content="{Binding CurrentPage}"                    NavigationUIVisibility="Hidden" Grid.RowSpan="2"/>
            <Label
    VerticalAlignment="Top" Margin="326,95,0,0" HorizontalAlignment="Left" FontSize="20" Foreground="White" Content="Login"/>
            <Label
    VerticalAlignment="Top" Grid.Row="1" Margin="326,21,0,0" HorizontalAlignment="Left" FontSize="20" Foreground="White" Content="Password" RenderTransformOrigin="0.324,0.52"/>
            <Label Content="" HorizontalAlignment="Left" Margin="441,92,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" Text="Введіть ім'я користувача" VerticalAlignment="Top" Foreground="Black" Background="White" FontSize="20" Width="348"/>
            <Label Content="Welcome to CoursesApp" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" Foreground="White" FontSize="30"/>
            <Button Content="Увійти" HorizontalAlignment="Center" Margin="0,198,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Width="176" Background="White"/>
            <CheckBox Content="Запам'ятати мене" HorizontalAlignment="Left" Margin="326,131,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" IsChecked="False"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,81,0,0" TextWrapping="Wrap" Text="Введіть Ваш пароль" VerticalAlignment="Top" Foreground="Black" Background="White" FontSize="20" Width="348" Grid.Row="1"/>
            <Button Content="Зареєструватися" HorizontalAlignment="Center" Margin="0,267,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Width="176" Background="White"/>
        </Grid>
    </Grid>
</Window>