<ui:FluentWindow x:Class="Courses.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Courses.Views"
        mc:Ignorable="d"
        Title="Освітня Система"
        Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowCornerPreference="Round">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" 
                     Title="Освітня Система"
                     ShowMinimize="False"
                     ShowMaximize="False"/>

        <Grid Grid.Row="1">
            <ui:InfoBar Title="{Binding SuccessMessage}"
                        Severity="Success"
                        IsOpen="{Binding HasSuccess}"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        MaxWidth="370"
                        Panel.ZIndex="1"/>

            <ui:InfoBar Title="{Binding ErrorMessage}"
                        Severity="Error"
                        IsOpen="{Binding HasError}"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        MaxWidth="370"
                        Panel.ZIndex="1"/>

            <Border CornerRadius="8" 
                    Background="{DynamicResource ApplicationBackgroundBrush}"
                    Padding="40">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    
                    <ui:SymbolIcon Symbol="PersonCircle24" 
                                   FontSize="64" 
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,20"/>

                    <TextBlock Text="Вітаємо!" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Увійдіть до освітньої системи" 
                               FontSize="14" 
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <ui:TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Логін"
                                FontSize="14"
                                Height="40"
                                Margin="0,0,0,16"
                                Icon="{ui:SymbolIcon Person24}"/>

                     <ui:PasswordBox x:Name="PasswordBox"
                                     PlaceholderText="Пароль"
                                     FontSize="14"
                                     Height="40"
                                     Margin="0,0,0,8"
                                     PasswordChanged="PasswordBox_PasswordChanged"
                                     Icon="{ui:SymbolIcon LockClosed24}"/>

                     <ui:Button Content="Увійти"
                                Command="{Binding LoginCommand}"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Height="42"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Appearance="Primary"
                                Margin="0,16,0,20"/>

                    <ui:Button Content="Зареєструватися"
                               Command="{Binding GoToRegistrationCommand}"
                               FontSize="13"
                               Height="36"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Center"
                               Appearance="Secondary"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
