<Page x:Class="Courses.Views.LectureEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Редагування лекції">
    <ScrollViewer Padding="24">
        <StackPanel MaxWidth="800">
            <TextBlock Text="Редагування лекції" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <ui:TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Назва лекції" Margin="0,0,0,10"/>
            <ui:TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Автор (кафедра)" Margin="0,0,0,10"/>
            
            <TextBlock Text="Секції лекції" Margin="0,10,0,5" FontWeight="SemiBold"/>
            <ItemsControl ItemsSource="{Binding Sections}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:Card Margin="0,0,0,10" Padding="10">
                            <StackPanel>
                                <ui:TextBox Text="{Binding Heading}" PlaceholderText="Заголовок секції" Margin="0,0,0,5"/>
                                <ui:TextBox Text="{Binding Paragraph}" PlaceholderText="Текст змісту" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="80"/>
                                <ui:Button Content="Видалити секцію" Click="RemoveSection_Click" Appearance="Secondary" Margin="0,5,0,0" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <ui:Button Content="Додати секцію" Command="{Binding AddSectionCommand}" Icon="{ui:SymbolIcon Add24}" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Скасувати" Click="Cancel_Click" Margin="0,0,10,0"/>
                <ui:Button Content="Зберегти" Command="{Binding SaveCommand}" Appearance="Primary"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>