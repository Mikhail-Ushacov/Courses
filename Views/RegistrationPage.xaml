<ui:FluentWindow x:Class="Courses.Views.RegistrationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Реєстрація - Освітня Система"
        Height="620" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowCornerPreference="Round">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" 
                     Title="Реєстрація"
                     ShowMinimize="False"
                     ShowMaximize="False"/>

        <Grid Grid.Row="1">
            <Border CornerRadius="8" 
                    Background="{DynamicResource ApplicationBackgroundBrush}"
                    Padding="40">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <ui:SymbolIcon Symbol="PersonAdd24" 
                                   FontSize="56" 
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,16"/>

                    <TextBlock Text="Створити акаунт" 
                               FontSize="26" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Заповніть дані для реєстрації" 
                               FontSize="13" 
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,28"/>

                    <ui:TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Логін"
                                FontSize="14"
                                Height="40"
                                Margin="0,0,0,14"
                                Icon="{ui:SymbolIcon Person24}"/>

                    <ui:PasswordBox x:Name="PasswordBox"
                                    PlaceholderText="Пароль"
                                    FontSize="14"
                                    Height="40"
                                    Margin="0,0,0,14"
                                    PasswordChanged="PasswordBox_PasswordChanged"
                                    Icon="{ui:SymbolIcon LockClosed24}"/>

                    <ui:PasswordBox x:Name="ConfirmPasswordBox"
                                    PlaceholderText="Підтвердіть пароль"
                                    FontSize="14"
                                    Height="40"
                                    Margin="0,0,0,8"
                                    PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                    Icon="{ui:SymbolIcon LockClosed24}"/>

                    <ui:InfoBar Title="{Binding ErrorMessage}"
                                Severity="Error"
                                IsOpen="{Binding HasError}"
                                Margin="0,8,0,4"/>

                    <ui:InfoBar Title="{Binding SuccessMessage}"
                                Severity="Success"
                                IsOpen="{Binding HasSuccess}"
                                Margin="0,4,0,4"/>

                    <ui:Button Content="Зареєструватися"
                               Command="{Binding RegisterCommand}"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Height="42"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Center"
                               Appearance="Primary"
                               Margin="0,12,0,16"/>

                    <ui:Button Content="Назад до входу"
                               Command="{Binding GoBackCommand}"
                               FontSize="13"
                               Height="36"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Center"
                               Appearance="Secondary"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
