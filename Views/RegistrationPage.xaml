<Window x:Class="Courses.Views.RegistrationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Реєстрація - Освітня Система" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#2C3E50">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Реєстрація" 
                       FontSize="32" 
                       Foreground="White" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <TextBlock Text="Логін" 
                       FontSize="16" 
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16"
                     Padding="10"
                     Background="White"
                     BorderThickness="0"
                     Margin="0,0,0,15"/>

            <TextBlock Text="Пароль" 
                       FontSize="16" 
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         FontSize="16"
                         Padding="10"
                         Background="White"
                         BorderThickness="0"
                         Margin="0,0,0,15"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBlock Text="Підтвердіть пароль" 
                       FontSize="16" 
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         FontSize="16"
                         Padding="10"
                         Background="White"
                         BorderThickness="0"
                         Margin="0,0,0,15"
                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#FF6B6B"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <TextBlock Text="{Binding SuccessMessage}" 
                       Foreground="#6BCB77"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       Visibility="{Binding HasSuccess, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Content="Зареєструватися" 
                    Command="{Binding RegisterCommand}"
                    FontSize="18"
                    Padding="15,10"
                    Background="White"
                    Foreground="#2C3E50"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="0,10,0,15"
                    Cursor="Hand"/>

            <Button Content="Назад до входу" 
                    Command="{Binding GoBackCommand}"
                    FontSize="14"
                    Padding="10,5"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="White"
                    BorderThickness="1"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
