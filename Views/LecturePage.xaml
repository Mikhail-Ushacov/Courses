<Page x:Class="Courses.LecturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Лекція">
    <ScrollViewer Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding LectureTitle}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Margin="0,0,0,5">
                <Run Text="Автор: "/><Run Text="{Binding LectureAuthor}"/>
            </TextBlock>
            <TextBlock Margin="0,0,0,20">
                <Run Text="Дата: "/><Run Text="{Binding LectureDate}"/>
            </TextBlock>
            <TextBlock Text="{Binding LectureContent}" TextWrapping="Wrap" FontSize="14"/>
        </StackPanel>
    </ScrollViewer>
</Page>
