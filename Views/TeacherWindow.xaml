<ui:FluentWindow x:Class="Courses.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Courses.Views"
        mc:Ignorable="d"
        Title="Освітня Система"
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="Освітня Система"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="0,8,8,0">
                <StackPanel Margin="8">
                    <TextBlock Text="{Binding WelcomeMessage}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,20"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <ui:Button Content="Мої курси"
                               Icon="{ui:SymbolIcon Book24}"
                               Command="{Binding GoToTeacherPageCommand}"
                               HorizontalAlignment="Stretch"
                               Margin="4"
                               Padding="12,10"/>

                    <ui:Button Content="Студенти"
                               Icon="{ui:SymbolIcon People24}"
                               Command="{Binding GoToStudentListPageCommand}"
                               HorizontalAlignment="Stretch"
                               Margin="4"
                               Padding="12,10"/>

                    <Border Height="1"
                            Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                            Margin="8,20"/>

                    <ui:Button Content="Вихід"
                               Icon="{ui:SymbolIcon ArrowExit20}"
                               Appearance="Secondary"
                               HorizontalAlignment="Stretch"
                               Margin="4"
                               Padding="12,10"
                               Click="LogoutButton_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    CornerRadius="8,0,0,0"
                    Background="{DynamicResource ApplicationBackgroundBrush}"
                    Margin="-1,0,0,0">
                <Frame x:Name="MainFrame"
                       Content="{Binding CurrentPage}"
                       NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
