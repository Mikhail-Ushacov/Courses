<Page x:Class="Courses.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Тест">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="800">
            <TextBlock Text="{Binding TestTitle}"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,24"/>

            <ItemsControl ItemsSource="{Binding Questions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:Card Margin="0,0,0,16" Padding="20">
                            <StackPanel>
                                <TextBlock Text="{Binding QuestionText}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,16"/>

                                <ItemsControl ItemsSource="{Binding AnswerOptions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Margin="0,4"
                                                    Padding="12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              Margin="0,0,12,0"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding AnswerText}"
                                                               TextWrapping="Wrap"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ui:Button Content="Завершити тест"
                       Command="{Binding SubmitTestCommand}"
                       Appearance="Primary"
                       FontSize="16"
                       HorizontalAlignment="Right"
                       Margin="0,24,0,0"
                       Padding="32,14"
                       Icon="{ui:SymbolIcon Checkmark24}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
