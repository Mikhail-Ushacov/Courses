<Page x:Class="Courses.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сторінка студента">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Мої курси" FontSize="18" FontWeight="Bold" Margin="5"/>

        <ListView Grid.Row="1" ItemsSource="{Binding EnrolledCourses}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Назва курсу">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding CourseName}"
                                Click="CourseButton_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="Blue"
                                Cursor="Hand"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Оцінка"
                            DisplayMemberBinding="{Binding FinalGrade}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
