<Page x:Class="Courses.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Student Page">
    <Grid>
        <ListView ItemsSource="{Binding EnrolledCourses}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Course Name" DisplayMemberBinding="{Binding CourseName}" />
                    <GridViewColumn Header="Grade" DisplayMemberBinding="{Binding FinalGrade}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
