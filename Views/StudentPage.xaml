<Page x:Class="Courses.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:Courses.Converters"
      Title="Сторінка студента">

    <Page.Resources>
        <converters:GradeDisplayConverter x:Key="GradeDisplayConverter"/>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Мої курси"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,24"/>

            <ui:Button Grid.Column="1"
                       Content="Реєстрація на курси"
                       Click="RegisterButton_Click"
                       Appearance="Primary"
                       FontSize="14"
                       Margin="16,0,0,24"
                       Padding="16,8"
                       Icon="Add24"/>
        </Grid>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding EnrolledCourses}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction Margin="0,4" Padding="16" Cursor="Hand"
                                   Click="CourseCard_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Book24" FontSize="24" Margin="0,0,16,0"/>
                                <TextBlock Text="{Binding CourseName}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Оцінка: "
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding FinalGrade, Converter={StaticResource GradeDisplayConverter}}"
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardAction>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
