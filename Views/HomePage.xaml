<Page x:Class="Courses.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Головна">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <TextBlock Text="Мої курси"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,24"/>

            <ItemsControl ItemsSource="{Binding AvailableCourses}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardAction Width="340" Margin="0,0,16,16" Padding="16" Cursor="Hand"
                                       Click="CourseCard_Click">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <ui:SymbolIcon Symbol="Book24" FontSize="24" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding CourseName}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Border BorderThickness="0,1,0,0"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        Margin="0,8,0,0"
                                        Padding="0,12,0,0">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="Оцінка: "
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding FinalTest}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource SystemFillColorSuccessBrush}"/>
                                        </StackPanel>

                                        <TextBlock Text="Доступні тести:"
                                                   FontWeight="SemiBold"
                                                   Margin="0,8,0,8"/>

                                        <ItemsControl ItemsSource="{Binding Test}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <ui:SymbolIcon Symbol="DocumentBulletList24" 
                                                                       FontSize="14" 
                                                                       Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding TestName}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ui:CardAction>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Page>
