<Window x:Class="Courses.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <TabControl>

            <!-- USERS TAB -->
            <TabItem Header="Users">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBox Width="150" Margin="5"
                                 Text="{Binding NewUsername}" 
                                 />
                        <PasswordBox x:Name="PasswordBox"
                                     Width="150" Margin="5"/>
                        <ComboBox Width="120" Margin="5"
                                  SelectedItem="{Binding NewUserType}">
                            <ComboBoxItem Content="Student" Tag="0"/>
                            <ComboBoxItem Content="Teacher" Tag="1"/>
                            <ComboBoxItem Content="Admin" Tag="2"/>
                        </ComboBox>
                        <Button Content="Add User" Width="100" Margin="5"
                                Click="AddUser_Click"/>
                        <Button Content="Delete User" Width="100" Margin="5"
                                Command="{Binding DeleteUserCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Users}"
                              SelectedItem="{Binding SelectedUser}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="UserType" Binding="{Binding UserType}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- COURSES TAB -->
            <TabItem Header="Courses">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBox Width="200" Margin="5"
                                 Text="{Binding NewCourseName}" />
                        <ComboBox Width="200" Margin="5"
                                  ItemsSource="{Binding Teachers}"
                                  DisplayMemberPath="Username"
                                  SelectedItem="{Binding SelectedTeacher}"/>
                        <Button Content="Add Course" Width="100" Margin="5"
                                Command="{Binding AddCourseCommand}"/>
                        <Button Content="Delete Course" Width="100" Margin="5"
                                Command="{Binding DeleteCourseCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Courses}"
                              SelectedItem="{Binding SelectedCourse}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CourseId}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding CourseName}" Width="*"/>
                            <DataGridTextColumn Header="TeacherId" Binding="{Binding TeacherId}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
