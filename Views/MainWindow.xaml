<Window x:Class="EducationalSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Educational System" Height="450" Width="800">
    <Grid>
        <Button Content="Go to Courses" Command="{Binding GoToCoursesCommand}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Width="150"/>
        <Button Content="Go to Login" Command="{Binding GoToLoginCommand}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0" Width="150"/>
        
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="180,0,0,0"/>
    </Grid>
</Window>
