<Page x:Class="Courses.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Головна">
    <Grid>
        <StackPanel>
            <TextBlock Text="Доступні курси" FontSize="24" FontWeight="Bold" Margin="20"/>
            <ListView ItemsSource="{Binding AvailableCourses}" Margin="20">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Назва курсу" DisplayMemberBinding="{Binding CourseName}" Width="300"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
