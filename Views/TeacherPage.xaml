<Page x:Class="Courses.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Teacher Page">
    <Grid>
        <ListView ItemsSource="{Binding ManagedCourses}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Course Name" DisplayMemberBinding="{Binding CourseName}" />
                    <GridViewColumn Header="Number of Students" DisplayMemberBinding="{Binding EnrolledStudentsCount}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
