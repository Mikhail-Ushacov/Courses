<Page x:Class="Courses.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Викладач">

    <Grid Margin="24">
        <TabControl>
            <TabItem Header="Мої курси">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
                    <ItemsControl ItemsSource="{Binding ManagedCourses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:CardAction Margin="0,4" Padding="16" Cursor="Hand"
                                               Click="CourseCard_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Book24" FontSize="24" Margin="0,0,16,0"/>
                                            <TextBlock Text="{Binding CourseName}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="People24" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding EnrolledStudentsCount}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </ui:CardAction>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Успішність студентів">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
                    <ItemsControl ItemsSource="{Binding StudentsPerformance}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:CardAction Margin="0,4" Padding="16" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Person24" FontSize="24" Margin="0,0,16,0"/>
                                            <TextBlock Text="{Binding StudentName}"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="Оцінка: "
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Grade}"
                                                       FontWeight="SemiBold"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </ui:CardAction>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
